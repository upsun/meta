    "express": "^5.1",
    "express-rate-limit": "^8.2",
    "pino": "^10.1",
    "pino-pretty": "^13.1",
    "yaml": "^2.6",
    "zod": "^4.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8",
    "@types/express": "^5.0",
    "@types/express-rate-limit": "^6.0",
    "@types/node": "^24.10",
    "nodemon": "^3.1",
    "ts-node": "^10.9",
    "typescript": "^5.9"
