{
  "name": "backend",
  "version": "1.1.0",
  "description": "Meta Registry Backend Server - Expose resources via REST API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec node --loader ts-node/esm src/index.ts",
