# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Logging Configuration
# Levels: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# CORS Configuration
# Comma-separated list of allowed origins, or '*' for all origins
# Examples: http://localhost:3000,https://example.com
CORS_ORIGINS=*

# Rate Limiting Configuration
# General rate limit (applies to all endpoints)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# Strict rate limit (for sensitive endpoints)
STRICT_RATE_LIMIT_WINDOW_MS=60000
STRICT_RATE_LIMIT_MAX_REQUESTS=10

# Resources Configuration
# Use 'local' for local files or 'github' for remote GitHub repository
RESOURCES_MODE=local

# GitHub Configuration (when RESOURCES_MODE=github)
# Upsun official documentation repository
GITHUB_REPO_OWNER=upsun
GITHUB_REPO_NAME=upsun-docs
GITHUB_BRANCH=master
GITHUB_BASE_PATH=shared/data
# Optional: GitHub Personal Access Token for private repositories (not needed for public repos)
GITHUB_TOKEN=

# Local Resources Path (when RESOURCES_MODE=local)
# Relative to backend folder
LOCAL_RESOURCES_PATH=../../resources
