{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/upsun-image-registry.json",
  "title": "Upsun Image Registry",
  "description": "Schema for Upsun image registry files such as resources/image/registry.json.",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[a-z0-9-]+$": {
      "$ref": "#/$defs/ImageRegistryEntry"
    }
  },
  "$defs": {
    "VersionStatus": {
      "type": "string",
      "enum": [
        "supported",
        "deprecated",
        "retired"
      ],
      "description": "Lifecycle status of the image version."
    },
    "VersionEndpoint": {
      "type": "object",
      "description": "Single service endpoint definition for a version.",
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 0
        },
        "scheme": {
          "type": "string"
        },
        "default": {
          "type": "boolean",
          "description": "Whether this endpoint is the default for the service."
        },
        "privileges": {
          "type": "object",
          "description": "Map of database (or similar resource) name to privilege level.",
          "additionalProperties": {
            "type": "string"
          }
        },
        "default_database": {
          "type": "string",
          "description": "Default database name, when applicable."
        }
      },
      "additionalProperties": true
    },
    "VersionManifest": {
      "type": "object",
      "description": "Technical manifest for a specific image version.",
      "properties": {
        "endpoints": {
          "description": "Map of endpoint name to endpoint definition.",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/$defs/VersionEndpoint"
              }
            }
          ]
        },
        "min_cpu_size": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        },
        "min_mem_size": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        },
        "is_persistent": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "min_disk_size": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ]
        },
        "allow_scale_up": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "allow_scale_down": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        },
        "storage_mount_point": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "default_container_profile": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "supports_horizontal_scaling": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": true
    },
    "UpsunVersion": {
      "type": "object",
      "description": "Upsun-specific information for this version.",
      "properties": {
        "status": {
          "$ref": "#/$defs/VersionStatus",
          "description": "Status of the version in Upsun (supported, deprecated, retired)."
        },
        "internal_support": {
          "type": "boolean",
          "description": "Whether this version is internally supported by Upsun, even if not officially maintained (is the image branch protected or not)."
        }
      },
      "required": ["status", "internal_support"],
      "additionalProperties": false
    },
    "UpstreamVersion": {
      "type": "object",
      "description": "Upstream provider information for this version.",
      "properties": {
        "status": {
          "$ref": "#/$defs/VersionStatus",
          "description": "Status of the version according to the upstream provider."
        },
        "release_date": {
          "oneOf": [ { "type": "string", "format": "date-time" }, { "type": "null" } ],
          "description": "Release date of the version (ISO 8601 format)."
        },
        "end_of_active_support_date": {
          "oneOf": [ { "type": "string", "format": "date-time" }, { "type": "null" } ],
          "description": "End of active support date (ISO 8601 format)."
        },
        "end_of_life_date": {
          "oneOf": [ { "type": "string", "format": "date-time" }, { "type": "null" } ],
          "description": "End of life date for the version (ISO 8601 format)."
        },
        "is_lts": {
          "type": "boolean",
          "description": "Whether the version is a long-term support (LTS) release."
        },
        "is_maintained": {
          "type": "boolean",
          "description": "Whether the version is currently maintained by the upstream provider."
        },
        "is_end_of_active_support": {
          "type": "boolean",
          "description": "Whether the version has reached end of active support."
        },
        "is_end_of_life": {
          "type": "boolean",
          "description": "Whether the version is end-of-life."
        },
        "is_long_term_support": {
          "type": "boolean",
          "description": "Whether the version benefits from long-term support."
        }
      },
      "required": ["status", "is_lts", "is_maintained", "is_end_of_active_support", "is_end_of_life", "is_long_term_support"],
      "additionalProperties": false
    },
    "ImageVersion": {
      "type": "object",
      "description": "Single image version entry, including Upsun, upstream and technical manifest information.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable version name or number (e.g. 8.3, 24, 8.0 (LTS))."
        },
        "upsun": {
          "$ref": "#/$defs/UpsunVersion",
          "description": "Upsun-specific information block for this version."
        },
        "upstream": {
          "$ref": "#/$defs/UpstreamVersion",
          "description": "Upstream provider information block for this version."
        },
        "manifest": {
          "$ref": "#/$defs/VersionManifest",
          "description": "Technical manifest describing endpoints, minimum resources, etc. for this version."
        }
      },
      "required": ["name", "upsun", "upstream", "manifest"],
      "additionalProperties": true
    },
    "DedicatedGen": {
      "type": "object",
      "description": "Lists of version identifiers per generation (supported/deprecated).",
      "properties": {
        "supported": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "deprecated": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "ImageDocsWebLocation": {
      "type": "object",
      "description": "Location configuration for web service.",
      "properties": {
        "root": {
          "type": "string",
          "description": "Root directory for the location."
        },
        "allow": {
          "type": "boolean",
          "description": "Whether this location is allowed."
        },
        "passthru": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "string"
            }
          ],
          "description": "Pass-through configuration."
        }
      },
      "required": ["root", "allow", "passthru"],
      "additionalProperties": false
    },
    "ImageDocsWeb": {
      "type": "object",
      "description": "Web configuration for the image.",
      "properties": {
        "commands": {
          "type": "object",
          "description": "Web commands (e.g., start command).",
          "properties": {
            "start": {
              "type": "string",
              "description": "Start command for the web service."
            }
          },
          "additionalProperties": false
        },
        "locations": {
          "type": "object",
          "description": "Web locations configuration.",
          "additionalProperties": {
            "$ref": "#/$defs/ImageDocsWebLocation"
          }
        }
      },
      "additionalProperties": false
    },
    "ImageDocsHooks": {
      "type": "object",
      "description": "Hook scripts for the image.",
      "properties": {
        "build": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Build hook scripts."
        }
      },
      "additionalProperties": false
    },
    "ImageDocs": {
      "type": "object",
      "description": "Documentation metadata for the image.",
      "properties": {
        "relationship_name": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 3,
              "maxLength": 36
            },
            {
              "type": "null"
            }
          ],
          "description": "Relationship name for documentation."
        },
        "service_name": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "description": "Service name for documentation."
        },
        "url": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://docs\\.upsun\\.com/",
          "description": "Documentation URL."
        },
        "web": {
          "$ref": "#/$defs/ImageDocsWeb"
        },
        "hooks": {
          "$ref": "#/$defs/ImageDocsHooks"
        }
      },
      "required": ["url"],
      "additionalProperties": false
    },
    "ImageRegistryEntry": {
      "type": "object",
      "description": "Single image entry in the registry.",
      "properties": {
        "description": {
          "type": "string",
          "description": "Short description of the image/service."
        },
        "docs": {
          "$ref": "#/$defs/ImageDocs",
          "description": "Documentation metadata for the image (links, web, hooks, etc.)."
        },
        "min_disk_size": {
          "oneOf": [
            { "type": "number" },
            { "type": "null" }
          ],
          "description": "Minimum disk size required for this image (in MB or GB, depending on context)."
        },
        "name": {
          "type": "string",
          "description": "Human-readable image name (e.g. 'PHP', 'Node.js', 'Chrome Headless')."
        },
        "repo_name": {
          "type": "string",
          "description": "Repository name for the image source (e.g. GitHub repo name)."
        },
        "runtime": {
          "type": "boolean",
          "description": "True if this image is a runtime (language) image, false for services."
        },
        "need_disk": {
          "type": "boolean",
          "description": "True if this image requires a disk to operate."
        },
        "premium": {
          "type": "boolean",
          "description": "True if this service is available only for premium plans."
        },
        "configuration": {
          "type": "string",
          "description": "YAML configuration snippet to include in user configuration examples."
        },
        "service_relationships": {
          "type": "string",
          "description": "YAML relationships snippet to include in user configuration examples."
        },
        "versions": {
          "type": "array",
          "items": { "$ref": "#/$defs/ImageVersion" },
          "minItems": 1,
          "description": "List of all available versions for this image."
        },
        "versions-dedicated-gen-2": {
          "description": "Dedicated Gen 2 versions map (accepted but intentionally not validated in detail)."
        },
        "versions-dedicated-gen-3": {
          "$ref": "#/$defs/DedicatedGen",
          "description": "Dedicated Gen 3 versions (supported/deprecated lists)."
        }
      },
      "required": ["versions"],
      "additionalProperties": true
    }
  }
}
